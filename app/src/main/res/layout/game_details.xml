<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:fancy="http://schemas.android.com/apk/res-auto"
	android:background="@android:color/transparent"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/language"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:textColor="?attr/game__score__heading_text_colour"
		android:textSize="24sp"
		android:layout_margin="8dp"
		android:textAlignment="center"
		tools:text="English (UK)" />

	<androidx.appcompat.widget.LinearLayoutCompat
		android:id="@+id/game_mode_details"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintTop_toBottomOf="@id/language"
		android:gravity="center"
		android:padding="8dp">

		<com.google.android.material.button.MaterialButton
			android:id="@+id/status_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:padding="4dp"
			android:minWidth="48dp"
			android:insetTop="0dp"
			android:insetLeft="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			android:textColor="?attr/game__score__text_colour"
			android:background="@android:color/transparent"
			tools:text="3 mins"
			android:textAllCaps="false"
			app:icon="@drawable/clock_regular"
			app:iconSize="18dp"
			app:iconTint="?attr/game__score__text_colour"
			app:iconGravity="textTop"
			/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/status_board_size"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:padding="4dp"
			android:minWidth="48dp"
			android:insetTop="0dp"
			android:insetLeft="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			android:textColor="?attr/game__score__text_colour"
			android:background="@android:color/transparent"
			tools:text="3x3"
			android:textAllCaps="false"
			app:icon="@drawable/border_all_solid"
			app:iconSize="18dp"
			app:iconTint="?attr/game__score__text_colour"
			app:iconGravity="textTop"
			/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/status_score_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:padding="4dp"
			android:minWidth="48dp"
			android:insetTop="0dp"
			android:insetLeft="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			android:textColor="?attr/game__score__text_colour"
			android:background="@android:color/transparent"
			tools:text="Word Length"
			android:textAllCaps="false"
			app:icon="@drawable/trophy_solid"
			app:iconSize="18dp"
			app:iconTint="?attr/game__score__text_colour"
			app:iconGravity="textTop"
			/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/status_min_length"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:padding="4dp"
			android:minWidth="48dp"
			android:insetTop="0dp"
			android:insetLeft="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			android:textColor="?attr/game__score__text_colour"
			android:background="@android:color/transparent"
			tools:text="â‰¥ 3"
			android:textAllCaps="false"
			app:icon="@drawable/arrow_down_short_wide_solid"
			app:iconSize="18dp"
			app:iconTint="?attr/game__score__text_colour"
			app:iconGravity="textTop"
			/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/status_hint_mode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:padding="4dp"
			android:minWidth="48dp"
			android:insetTop="0dp"
			android:insetLeft="0dp"
			android:insetRight="0dp"
			android:insetBottom="0dp"
			android:textColor="?attr/game__score__text_colour"
			android:background="@android:color/transparent"
			tools:text="No hints"
			android:textAllCaps="false"
			app:icon="@drawable/suitcase_medical_solid"
			app:iconSize="18dp"
			app:iconTint="?attr/game__score__text_colour"
			app:iconGravity="textTop"
			/>

	</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
